<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/default_gap"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Data"
        android:text="Data: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/textData"
        android:layout_toRightOf="@+id/textData"
        android:text="Data"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/Importo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Data"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:text="Importo"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <TextView
        android:id="@+id/valuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Data"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/Importo"
        android:layout_toRightOf="@+id/Importo"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:text="â‚¬"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <TextView
        android:id="@+id/Macroarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Importo"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="#59FFD740"
        android:gravity="center"
        android:text="Macroarea"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/TextCausale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Causale"
        android:text="Causale: "
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <TextView
        android:id="@+id/Causale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Macroarea"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/TextCausale"
        android:layout_toRightOf="@+id/TextCausale"
        android:ellipsize="end"
        android:text="Causale"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/Utente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Causale"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="Utente"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />



</RelativeLayout>